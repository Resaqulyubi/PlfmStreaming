<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <LinearLayout
        android:id="@+id/lnly_top"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="42dp"
        android:paddingRight="21dp"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/rlly_Version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/tv_version_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version"
              />

            <TextView
                android:id="@+id/txtv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:layout_marginBottom="10dp"
                android:layout_below="@id/tv_version_title"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/darker_gray"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txtv_version"

                android:background="@color/colorPrimary"
                />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlly_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/tv_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"

                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/txtv_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/tv_update_title"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/darker_gray"
              />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txtv_last_update"

                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/lnly_cek_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lnly_loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_gravity="center">

                    <ProgressBar
                        android:layout_gravity="center_horizontal"
                        android:layout_width="5dp"
                        android:layout_height="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LOADING..."

                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <TextView

                    android:id="@+id/tv_cek_update"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CEK UPDATE"
                    android:gravity="center"
                    android:visibility="gone" />

            </LinearLayout>


        </RelativeLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/lnly_top"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="42dp"
        android:paddingRight="21dp"

        android:layout_marginTop="44dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info"

            />

    </LinearLayout>


</RelativeLayout>